<center><h1>Edit Your Notes </h1></center>
<div class="row">
    <div class="col-md-6">
      <div class="form-group">
          <label>Your User Id*:</label>
          {{input type="text" class="form-control" placeholder="Your User Id " value=model.userId autofocus="autofocus"}}
      </div>
      <div class="form-group">
          <label>Notes title*:</label>
          {{input type="text" class="form-control" placeholder="Notes Title " value=model.title autofocus="autofocus"}}
      </div>

       <div class="form-group">
        <form>
             <label>Notes Completed Status*:</label><br>
            <label id='label-red'>True</label>
            {{radio-button name="aria-example" ariaLabelledby="label-red" value="true" groupValue=color}}

            <label id='label-blue'>False</label>
            {{radio-button name="aria-example" ariaLabelledby="label-blue" value="false" groupValue=color}}

        </form>
      </div>
      <button class="btn btn-success" {{action 'savenote' model}} >Save Changes</button>
    </div>

  {{#if responseMessage}}
      <div class="col-md-6">
          <br/>
          <div class="alert alert-success">
              <h4>Thank you! Your Note is changed.</h4>
              <p>{{responseMessage}}</p>
          </div>
      </div>
  {{/if}}
</div>
